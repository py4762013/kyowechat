<%- include header %>
    <div class="jumbotron">
        <h1><%= title %></h1>
        <form method="post">
            <div class="form-group">
                <label class="control-label col-sm-2">自定义菜单</label>
                <div class="col-sm-10">
                    <select >
                        <option value="0">否</option>
                        <option value="1"
                                <% if(menuopen){ %>
                                    selected
                                <% } %>
                                >是</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-10 col-sm-2">
                    <button type="submit">提交</button>
                </div>
            </div>
        </form>
    </div>
<%- include footer %>