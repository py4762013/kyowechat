<%- include header %>
<div class="jumbotron">
    <h1><%= title %></h1>
    <form method="post">
        <div class="form-group">
            <label>Username:</label>
            <% if(user){ %>
            <input type="hidden" name="id" value="<%= user._id %>" />
            <input type="email" class="form-control" name="username" value="<%= user.username %>" />
            <% }else{ %>
            <input type="email" class="form-control" name="username" placeholder="Please input your Username" />
            <% } %>
        </div>
        <div class="form-group">
            <label>Password:</label>
            <% if(user){ %>
            <input type="password" class="form-control" name="password" value="<%= user.password %>" />
            <% }else{ %>
            <input type="password" class="form-control" name="password" placeholder="Please input your Password" />
            <% } %>
        </div>
        <!--<div class="checkbox">
            <label>
                <input type="checkbox">Check me out
            </label>
        </div>-->
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
</div>
<%- include footer %>